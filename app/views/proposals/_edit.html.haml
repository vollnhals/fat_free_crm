.remote
  - remote_form_for(@proposal, :html => one_submit_only(:proposal)) do |f|
    = link_to_close edit_proposal_path(@proposal)
    = f.hidden_field :user_id
    = f.error_messages
    = render :partial => "proposals/top_section",  :locals => { :f => f, :edit => true }
    = render :partial => "proposals/permissions",  :locals => { :f => f, :edit => true }
    .buttonbar
      = f.submit "Save Proposal"
      or 
      = link_to_cancel edit_proposal_path(@proposal)
