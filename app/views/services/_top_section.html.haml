.section
  %table{ :width => 500, :cellpadding => 0, :cellspacing => 0 }
    %tr
      %td{ :valign => :top }
        .label.top.req Name:
        = f.text_field :name, :style => "width:324px"
    %tr
      %td{ :valign => :top }
        .label.top.req Price:
        = f.text_field :price, :style => "width:324px"
    %tr
      %td{ :valign => :top }
        .label.top.req Assigned to:
        = collection_select :service, :assigned_to, @users, :id, :full_name, { :include_blank => "Myself" }, { :style => "width:160px" }
    = hook(:service_top_section_bottom, self, :f => f)
