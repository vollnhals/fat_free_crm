.remote
  - remote_form_for(@service, :html => one_submit_only(:service)) do |f|
    = link_to_close edit_service_path(@service)
    = f.hidden_field :user_id
    = f.error_messages
    = render :partial => "services/top_section",  :locals => { :f => f, :edit => true }
    = render :partial => "services/permissions",  :locals => { :f => f, :edit => true }
    .buttonbar
      = f.submit "Save Service"
      or 
      = link_to_cancel edit_service_path(@service)
